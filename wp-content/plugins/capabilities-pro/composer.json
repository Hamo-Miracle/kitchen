{
    "name": "publishpress/publishpress-capabilities-pro",
    "type": "wordpress-plugin",
    "description": "",
    "license": "GPL-2",
    "authors": [
      {
        "name": "PublishPress",
        "email": "help@publishpress.com"
      }
    ],
    "config": {
      "preferred-install": {
        "*": "dist"
      },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
      "php": ">=7.2.5"
    },
    "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "wp-coding-standards/wpcs": "^2.3",
    "squizlabs/php_codesniffer": "^3.5",
    "overtrue/phplint": "^2.1",
    "wp-cli/i18n-command": "^2.2",
    "friendsofphp/php-cs-fixer": "^3.4",
    "automattic/vipwpcs": "^2.3",
    "publishpress/publishpress-phpcs-standards": "dev-main",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "phpstan/extension-installer": "^1.2"
  },
  "scripts": {
    "build": "ppbuild build",
    "build:dir": "ppbuild build-dir",
    "build:clean": "ppbuild clean",
    "get:version": "ppbuild version",
    "gen:mo": "wp i18n make-mo ./languages ./languages --allow-root;wp i18n make-mo ./lib/status-capabilities/languages ./lib/status-capabilities/languages --allow-root",
    "gen:pot": "wp i18n make-pot . languages/capabilities-pro.pot --domain=capabilities-pro --exclude=dev-workspace,.wordpress-org,.github,dist,tests,vendor, --allow-root;wp i18n make-pot ./lib/status-capabilities lib/status-capabilities/languages/publishpress-status-capabilities.pot --domain=publishpress-status-capabilities --exclude=dev-workspace,.wordpress-org,.github,dist,tests,vendor, --allow-root",
    "check:longpath": "longpath .",
    "check:lint": "phplint",
    "check:phpcs": "phpcs",
    "check:php": [
        "@check:php56",
        "@check:php72",
        "@check:php74",
        "@check:php80",
        "@check:php81",
        "@check:php82"
    ],
    "check:php56": "phpcs --standard=.phpcs-php-compatibility.xml --runtime-set testVersion 5.6 ./capabilities-pro.php",
    "check:php72": "phpcs --standard=.phpcs-php-compatibility.xml --runtime-set testVersion 7.2",
    "check:php74": "phpcs --standard=.phpcs-php-compatibility.xml --runtime-set testVersion 7.4",
    "check:php80": "phpcs --standard=.phpcs-php-compatibility.xml --runtime-set testVersion 8.0",
    "check:php81": "phpcs --standard=.phpcs-php-compatibility.xml --runtime-set testVersion 8.1",
    "check:php82": "phpcs --standard=.phpcs-php-compatibility.xml --runtime-set testVersion 8.2",
    "pre-autoload-dump": "composer dumpautoload --working-dir=./lib",
    "pre-update-cmd": "composer update --working-dir=./lib",
    "pre-install-cmd": "composer install --working-dir=./lib",
	  "term": "cd dev-workspace && ./run"
  },
    "extra": {
      "plugin-name": "publishpress-capabilities-pro",
      "plugin-slug": "capabilities-pro",
      "plugin-folder": "capabilities-pro"
    }
}
